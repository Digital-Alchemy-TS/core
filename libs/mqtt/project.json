{
  "name": "mqtt",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/mqtt/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/mqtt",
        "tsConfig": "libs/mqtt/tsconfig.lib.json",
        "packageJson": "libs/mqtt/package.json",
        "main": "libs/mqtt/src/index.ts",
        "assets": ["libs/mqtt/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs mqtt {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/mqtt/jest.config.ts"
      }
    }
  },
  "tags": []
}
