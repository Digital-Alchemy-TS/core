{
  "name": "home-assistant",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/home-assistant/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/home-assistant",
        "tsConfig": "libs/home-assistant/tsconfig.lib.json",
        "packageJson": "libs/home-assistant/package.json",
        "main": "libs/home-assistant/src/index.mts",
        "assets": ["libs/home-assistant/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs home-assistant {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/home-assistant/jest.config.ts"
      }
    }
  },
  "tags": []
}
