{
  "compileOnSave": false,
  "include": ["**/*.ts"],
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ES2022",
    "paths": {
      "@zcc/boilerplate": [
        "libs/boilerplate/src/index.ts"
      ],
      "@zcc/utilities": [
        "libs/utilities/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"],
  "references": [
    {
      "path": "./libs/boilerplate/tsconfig.json"
    },
    {
      "path": "./libs/utilities/tsconfig.json"
    }
  ]
}
