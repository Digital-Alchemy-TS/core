{
  "compileOnSave": false,
  "include": ["**/src/**/*.mts"],
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "composite": true,
    "isolatedModules": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ESNext",
    "paths": {
      "@zcc/boilerplate": [
        "libs/boilerplate/src/index.mts"
      ],
      "@zcc/utilities": [
        "libs/utilities/src/index.mts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"],
  "references": [
    {
      "path": "./libs/boilerplate/tsconfig.json"
    },
    {
      "path": "./libs/utilities/tsconfig.json"
    }
  ]
}
