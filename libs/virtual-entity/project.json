{
  "name": "virtual-entity",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/virtual-entity/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/virtual-entity",
        "tsConfig": "libs/virtual-entity/tsconfig.lib.json",
        "packageJson": "libs/virtual-entity/package.json",
        "main": "libs/virtual-entity/src/index.mts",
        "assets": ["libs/virtual-entity/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs virtual-entity {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/virtual-entity/jest.config.ts"
      }
    }
  },
  "tags": []
}
