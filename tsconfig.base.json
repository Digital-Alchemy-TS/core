{
  "compileOnSave": false,
  "include": ["**/*.ts"],
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "paths": {
      "@zcc/automation-logic": ["libs/automation-logic/src/index.ts"],
      "@zcc/boilerplate": ["libs/boilerplate/src/index.ts"],
      "@zcc/gotify": ["libs/gotify/src/index.ts"],
      "@zcc/home-assistant": ["libs/home-assistant/src/index.ts"],
      "@zcc/utilities": ["libs/utilities/src/index.mts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"],
  "references": []
}
