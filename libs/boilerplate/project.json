{
  "name": "boilerplate",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/boilerplate/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/boilerplate",
        "tsConfig": "libs/boilerplate/tsconfig.lib.json",
        "packageJson": "libs/boilerplate/package.json",
        "main": "libs/boilerplate/src/index.mts"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs boilerplate {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/boilerplate/jest.config.ts"
      }
    }
  },
  "tags": []
}
