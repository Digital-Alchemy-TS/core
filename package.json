{
  "name": "@zoe-codez/zcc",
  "repository": "https://github.com/zoe-codez/zcc",
  "version": "0.0.12",
  "author": {
    "url": "https://github.com/zoe-codez",
    "name": "Zoe"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "dev:type-writer": "tsx watch src/type-writer/main.ts",
    "dev:nexus": "tsx watch src/nexus/main.ts",
    "test": "echo 'Error: no test specified' && exit 1",

    "hass:compress": "./scripts/compress.sh",
    "hass:cleanup": "rm -rf ./docker/homeassistant/config",
    "hass:decompress": "./scripts/decompress.sh",
    "hass:prep": "./scripts/hass-prep.sh",
    "hass:reset": "./scripts/hass-reset.sh",
    "hass:logs": "docker compose -f ./docker/homeassistant/docker-compose.yaml logs -f --tail 20",
    "hass:restart": "docker compose -f ./docker/homeassistant/docker-compose.yaml restart",
    "hass:start": "docker compose -f ./docker/homeassistant/docker-compose.yaml up -d",
    "hass:stop": "docker compose -f ./docker/homeassistant/docker-compose.yaml stop",
    "redis:start": "docker compose -f ./docker/redis/docker-compose.yaml up -d",
    "redis:stop": "docker compose -f ./docker/redis/docker-compose.yaml stop"
  },
  "exports": {
    ".": "./dist/index.js",
    "./hass": "./dist/hass/index.js",
    "./mqtt": "./dist/mqtt/index.js",
    "./server": "./dist/server/index.js",
    "./synapse": "./dist/synapse/index.js",
    "./automation": "./dist/automation/index.js"
  },
  "bin": {
    "type-writer": "./dist/type-writer/main.js"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.0",
    "@fastify/auth": "^4.5.0",
    "@fastify/basic-auth": "^5.1.1",
    "@fastify/jwt": "^8.0.0",
    "async": "^3.2.5",
    "bottleneck": "^2.19.5",
    "chalk": "^5.3.0",
    "comment-json": "^4.2.3",
    "cron": "^3.1.6",
    "dayjs": "^1.11.10",
    "deep-equal": "^2.2.3",
    "eventemitter3": "^5.0.1",
    "fastify": "^4.26.0",
    "ini": "^4.1.1",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "mqtt": "^5.3.5",
    "mqtt-packet": "^9.0.0",
    "node-cache": "^5.1.2",
    "object-path": "^0.11.8",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "redis": "^4.6.13",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.3.2",
    "@types/async": "^3.2.24",
    "@types/deep-equal": "^1.0.4",
    "@types/ini": "^4.1.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.16",
    "@types/object-path": "^0.11.4",
    "@types/semver": "^7.5.6",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^51.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "npm-check-updates": "^16.14.14",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "type-fest": "^4.10.2"
  }
}
