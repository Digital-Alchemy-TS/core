{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "paths": {
      "@zcc/automation-logic": ["libs/automation-logic/src/index.ts"],
      "@zcc/boilerplate": ["libs/boilerplate/src/index.ts"],
      "@zcc/gotify": ["libs/gotify/src/index.ts"],
      "@zcc/hass": ["libs/hass/src/index.ts"],
      "@zcc/mqtt": ["libs/mqtt/src/index.ts"],
      "@zcc/server": ["libs/server/src/index.ts"],
      "@zcc/utilities": ["libs/utilities/src/index.ts"],
      "@zcc/virtual-entity": ["libs/virtual-entity/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
